{
  "compilerOptions": {
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noEmitOnError": false,
    "removeComments": false,
    "declaration": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "outDir": "../lib",
    "jsx": "react",
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": false,
    "baseUrl": ".",
    "rootDirs": [
      "./src",
      "./mocks"
    ],
    "paths": {
      "src": ["src/*"],
      "mocks": ["mocks/*"]
    },
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "types": [
      "storybook__react",
      "storybook__addon-actions",
      "node",
      "jest"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ], 
    "plugins": [
      {
        "name": "tslint-language-service"
      } 
    ]
  },
  "exclude": [
    "node_modules",
    "wwwroot",
    "stories",
    "mocks",
    "**/__tests__/*",
    "**/setupTest.ts"
  ],
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "src",
      "stories"
    ]
  }
}