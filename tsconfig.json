{
  "compilerOptions": {
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noEmitOnError": false,
    "removeComments": false,
    "declaration": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "outDir": "./lib",
    "jsx": "react",
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": false,
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "types": [
      "storybook__react",
      "storybook__addon-actions",
      "jest"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "wwwroot",
    "stories",
    "**/__tests__/*",
    "**/setupTest.ts"
  ],
  "jest": {
    "moduleDirectories": [
      "node_modules"
    ]
  }
}