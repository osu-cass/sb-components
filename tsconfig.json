{
    "compilerOptions": {
      "alwaysStrict": true,
      "noImplicitAny": true,
      "noEmitOnError": false,
      "removeComments": false,
      "sourceMap": true,
      "module": "commonjs",
      "target": "es5",
      "outDir": "./build",
      "jsx": "react",
      "strictNullChecks": true,
      "allowSyntheticDefaultImports": false,
      "moduleResolution": "node",
      "lib": [
        "es5",
        "es6",
        "dom"
      ],
      "types": [
        "storybook__react",
        "storybook__addon-actions"
      ],
      "typeRoots": [
        "./node_modules/@types"
      ]
    },
    "exclude": [
      "node_modules",
      "wwwroot",
      "stories/*"
    ],
    "jest": {
      "moduleDirectories": [
        "node_modules"
      ]
    }
  }
